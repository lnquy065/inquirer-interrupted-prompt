{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],

  "exclude": [
    "node_modules"
  ]
}